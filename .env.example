# ============================================
# Vue Auto I18n 配置文件
# ============================================

# --------------------------------------------
# 翻译服务配置
# --------------------------------------------
# 支持的服务: google, deepl, openai, glm, baidu
TRANSLATE_SERVICE=google

# --------------------------------------------
# API 密钥配置
# --------------------------------------------
# 通用 API 密钥（适用于 Google/DeepL，用于兼容旧配置）
TRANSLATE_API_KEY=

# Google 翻译 API Key（如果使用官方付费 API）
GOOGLE_API_KEY=

# DeepL 专用 API Key（如果使用 DeepL）
DEEPL_API_KEY=
# DeepL API URL（可选，默认使用免费版）
DEEPL_API_URL=https://api-free.deepl.com/v2/translate

# OpenAI API Key（如果使用 OpenAI）
OPENAI_API_KEY=
# OpenAI 模型选择（可选，默认 gpt-3.5-turbo）
OPENAI_MODEL=gpt-3.5-turbo
# OpenAI API Base URL（可选，用于代理或自定义端点）
OPENAI_BASE_URL=https://api.openai.com/v1/chat/completions

# GLM (智谱AI) API Key（如果使用 GLM）
GLM_API_KEY=
# GLM 模型选择（可选，默认 glm-4）
GLM_MODEL=glm-4
# GLM API Base URL（可选，默认官方端点）
GLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4/chat/completions

# 百度翻译配置（如果使用百度翻译）
BAIDU_APP_ID=
BAIDU_SECRET=

# --------------------------------------------
# 目标语言配置
# --------------------------------------------
# 目标语言列表（逗号分隔）
# 支持的语言: en-US, ja-JP, ko-KR, fr-FR, de-DE, es-ES, pt-PT, ru-RU 等
TARGET_LANGUAGES=en-US,ja-JP,ko-KR

# --------------------------------------------
# 路径配置
# --------------------------------------------
# 语言包输出目录
LOCALES_DIR=src/locales

# 缓存文件目录
CACHE_DIR=.i18n-cache

# --------------------------------------------
# 扫描路径配置
# --------------------------------------------
# 包含的文件路径（逗号分隔，支持 glob 模式）
INCLUDE_PATHS=src/**/*.{vue,js,ts,jsx,tsx}

# 排除的文件路径（逗号分隔，支持 glob 模式）
EXCLUDE_PATHS=node_modules/**,dist/**,build/**

# --------------------------------------------
# 翻译行为配置
# --------------------------------------------
# 是否启用增量翻译（true/false）
# 启用后只翻译新增或修改的文本
INCREMENTAL=true

# 批量翻译大小（1-100）
# 每次API调用翻译的文本数量
BATCH_SIZE=10

# 请求延迟（毫秒）
# 翻译请求之间的延迟时间，避免触发速率限制
# 对于 GLM 等有限制的服务，建议设置更大的值（如 3000）
REQUEST_DELAY=100

# 最大重试次数（0-10）
# API 调用失败时的最大重试次数
MAX_RETRIES=3

# --------------------------------------------
# Key 生成策略
# --------------------------------------------
# 支持的策略: auto, hash, prefix
# auto: 短文本使用文本本身，长文本生成 text_N
# hash: 使用文本内容的哈希值
# prefix: 统一使用 text_N 前缀
KEY_STRATEGY=auto

# --------------------------------------------
# 调试配置
# --------------------------------------------
# 是否显示详细日志（true/false）
VERBOSE=false
